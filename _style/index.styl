@import 'nib'

global-reset()

html
  height: 100%
body
  background: #333
  padding: 2rem
  height: 100%
  color: white
  font-family: sans-serif
  overflow: hidden
h1
  font-size: 3rem
  font-weight: bold
  text-align: center
a
  text-decoration: none
  color: inherit
nav
  .nav-list
    width: 100%
    display: flex
    flex-direction: row
    justify-content: space-around
    margin-bottom: 2rem
    align-items: center
    &__element
      background: lighten(#333, 20%)
      margin: 0 .5rem
      padding: .5rem
      text-align: center
      font-weight: bold
      color: white
      &:hover
        background:  lighten(#333, 40%)
        cursor: pointer


